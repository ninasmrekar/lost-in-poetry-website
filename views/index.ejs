<main>
    <div class="container">
        <form class="row" action="/get-poet" method="POST">
            <div class="col-10">
                <input type="text" class="form-control" name="keyword"
                    placeholder="Enter an author or a title of a poem" required>
            </div>
            <div class="col-2">
                <select class="col-6 form-select" name="search" required>
                    <option selected value="author">Author</option>
                    <option value="title">Title</option>
                </select>
            </div>

            <div class="my-3 form-check d-flex justify-content-center">
                <button type="submit" class="btn custom-btn btn-lg">Search</button>
            </div>
        </form>
        <div class="row">
            <% if(locals.data){%>
            <%for(let i = 0; i < data.length; i++){%>
            <div class=" col-sm-6 my-3 mb-sm-0 d-flex align-items-stretch">
                <div class="card home-card">
                    <div class="card-body d-flex align-items-center flex-column">
                        <h5 class="card-title my-3"><%= data[i].title %></h5>
                        <h6 class="card-text my-2"><%= data[i].author %></h6>
                        <div class="see-more mx-3">
                            <a class="icon-link" href=<%= "/poem/" + i %>>
                                See More

                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
            <%}%>
        </div>
    </div>
</main>

